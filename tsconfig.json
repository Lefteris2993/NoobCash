{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "target": "es6",
    "rootDir": "./",
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
          "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
